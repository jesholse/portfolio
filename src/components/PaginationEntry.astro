---
const {title, slug, excerpt, author, image} = Astro.props
console.log(Astro.props)
---

<div class="border-b-2  py-4">
    <a transition:name={`heading-${slug}`} class="text-medium text-xl font-medium hover:underline" href={`/projects/${slug}`}>{title}</a>
    <div class="flex flex-row gap-8 mt-4 items-center">
        <img class=" md:w-40 w-24" transition:name={`img-${slug}`} src={image}/>
        <div class="line-clamp-6 md:w-96 h-fit">{excerpt}</div>
    </div>
    <div transition:name={`footer-${slug}`} style="width: 100%" class="pt-2 pl-2 footer flex flex-row justify-start gap-4 text-sm">
        <div class="flex flex-row gap-2">
            <i class="gg-comment "></i>
            <span>1</span>
        </div>
        <div class="flex flex-row gap-2 items-center">
            <i class="gg-calendar-dates"></i>
            <span>0 days ago</span> 
        </div>
        <div class="flex flex-row gap-2 items-center">
            <i class="gg-user"></i>
            <span>by {author}</span>
        </div>
    </div>					
</div>