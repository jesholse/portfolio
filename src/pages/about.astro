---
import Layout from "../layouts/Layout.astro";
import { getEntry } from "astro:content";
const about = await getEntry("pages", "about")
console.log(about)
const {Content} = await about.render()
console.log(Content)
---
<Layout title="About">
      <div class="mx-auto gap-20 md:my-20 mt-6 max-w-4xl">
		<div class="px-4 rounded-2xl mx-auto">
			<div class="mb-4 text-sm py-4 footer flex md:flex-row flex-col justify-center md:items-center  gap-4 border-b-2 border-neutral-100">
				<div transition:name="image">
					<img class="md:w-96 p-4" src="/images/amicofront.svg"/>	
				</div>
				<div class="bg-orange-100 p-4 rounded-2xl h-fit">
					<h3 class="text-2xl">About</h3>
					<h4 class="text-xl">What this page is all about</h4>
					<ul class="mt-2 ml-6 text-lg list-disc">
						<li>Astro.js</li>
						<li>Tailwind css</li>
						<li>View transitions</li>
					</ul>
				</div>
			</div>	
			<div class="text-xl [&>p]:mt-4">
				<Content></Content>
			</div>
		</div>
	</div>
</Layout>